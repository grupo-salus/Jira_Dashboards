# =============================================================================
# CONFIGURAÇÕES ESSENCIAIS - JIRA DASHBOARDS API
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES BÁSICAS
# =============================================================================

# Ambiente (development, production)
ENVIRONMENT=development

# Debug mode
DEBUG=True

# Secret key para JWT
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# BANCO DE DADOS
# =============================================================================

# Tipo: sqlite ou sqlserver
DATABASE_TYPE=sqlite

# SQLite (desenvolvimento)
SQLITE_DATABASE_PATH=./jira_dashboards.db

# SQL Server (produção)
DATABASE_SERVER=localhost
DATABASE_NAME=jira_dashboards
DATABASE_USER=sa
DATABASE_PASSWORD=your-database-password

# =============================================================================
# JIRA
# =============================================================================

# URL do Jira
JIRA_URL=https://tigruposalus.atlassian.net

# Email do usuário Jira
JIRA_EMAIL=email@gruposalus.com.br

# API Token do Jira (gerar em: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token

# =============================================================================
# LDAP - SORRIDENTS
# =============================================================================

# Habilitar LDAP
LDAP_ENABLED=True

# Servidor LDAP
LDAP_SERVER=ldap://10.200.128.60:389

# Base DN
LDAP_BASE_DN=dc=sorridents,dc=br

# DN do usuário para binding
LDAP_BIND_DN=glpi.sync@sorridents.br

# Senha do usuário LDAP
LDAP_BIND_PASSWORD=your-ldap-bind-password

# =============================================================================
# CORS
# =============================================================================

# URLs permitidas para CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# SERVIDOR
# =============================================================================

# Host e porta
HOST=0.0.0.0
PORT=8000 